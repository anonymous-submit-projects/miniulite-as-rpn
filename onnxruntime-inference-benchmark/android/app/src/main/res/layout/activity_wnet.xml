<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".WNetActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Pipeline Benchmark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_start_wnet_benchmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start test with proposed pipeline" />

    <TextView
        android:id="@+id/info_pipeline_benchmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="start"
        android:text="Loading configuration..." />

    <TextView
        android:id="@+id/text_view_total_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="start"
        tools:text="Tempo Total (16 imagens): 1500.7 ms" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_wnet_results"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:gravity="start"
        android:layout_weight="1" />

</LinearLayout>
